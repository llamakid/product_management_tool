<p id="notice"><%= notice %></p>

<h1>Product Properties</h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Product</th>
      <th>Property</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_properties.each do |product_property| %>
      <tr>
        <td><%= product_property.value %></td>
        <td><%= product_property.product_id %></td>
        <td><%= product_property.property_id %></td>
        <td><%= link_to 'Show', product_property %></td>
        <td><%= link_to 'Edit', edit_product_property_path(product_property) %></td>
        <td><%= link_to 'Destroy', product_property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

